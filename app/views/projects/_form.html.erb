<%= form_with(model: project) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :budget %>
    <%= form.text_field :budget, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start %>
    <%= form.date_field :start, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end %>
    <%= form.date_field :end, class: "form-control" %>
  </div>


  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), projects_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), project_path(@project), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
