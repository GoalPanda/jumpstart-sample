<%= form_for([post.project, post]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :flag %>
    <%= form.select :flag, Post.flags.map { |key, value| [key.humanize, key] }, class: "form-control w-100" %>
  </div>

  <div class="form-group">
    <%= form.label :message %>
    <%= form.rich_text_area :message, class: "form-control" %>
  </div>


  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), posts_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), post_path(@post), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
