<%= form_for([component.project, component]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :flag %>
    <%= form.select :flag, Component.flags.map { |key, value| [key.humanize, key] }, class: "form-control w-100" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: "form-control" %>
  </div>


  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), components_path, class: "btn btn-cancel" %>
    <% else %>
      <%= link_to t("cancel"), component_path(@component), class: "btn btn-cancel" %>
    <% end %>
  </div>
<% end %>
