<%= form_for([activity.component, activity]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :budget %>
    <%= form.text_field :budget, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :color %>
    <%= form.number_field :color, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.number_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :flag %>
    <%= form.select :flag, Activity.flags.map { |key, value| [key.humanize, key] }, class: "form-control w-100" %>
  </div>

  <div class="form-group">
    <%= form.label :parent_id %>
    <%= form.number_field :parent_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.number_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :component_id %>
    <%= form.text_field :component_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), activities_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), activity_path(@activity), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
